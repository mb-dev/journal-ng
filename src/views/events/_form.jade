.error {{error}}
  .panel.panel-default
    form.panel-body.form-horizontal(role='form')
      .form-group
        label.col-xs-4.col-sm-2.control-label Categories
        .col-xs-8.col-sm-10
          input(type="text", ng-model='item.categories', selectize="stringsWithCreate", multiple, all-items="{{allCategories}}")
      .form-group
        label.col-xs-4.col-sm-2.control-label Participants
        .col-xs-8.col-sm-10
          input(type="text", ng-model='item.participantIds', multiple, selectize="strings", all-items="{{allPeople}}")
      .form-group
        label.col-xs-4.col-sm-2.control-label Title
        .col-xs-8.col-sm-10
          input.form-control(type='text', placeholder='Title', ng-model='item.title')
      .form-group
        label.col-xs-4.col-sm-2.control-label Date
        .col-xs-8.col-sm-10
          input.form-control(pickadate, type='text', placeholder='Date', ng-model='item.date', date-format='')
      .form-group
        label.col-xs-4.col-sm-2.control-label Content
        .col-xs-8.col-sm-10
          textarea.form-control(msd-elastic, type='text', ng-model='item.content')